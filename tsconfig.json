{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "es2019",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*", "./*.ts"]
}
